<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/categoryTxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Trending Artists 2021"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontal1"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryTxt1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="134dp"
                android:layout_height="189dp"
                android:layout_marginStart="15dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tay" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="134dp"
                android:layout_height="190dp"
                android:layout_marginStart="15dp"

                app:layout_constraintStart_toEndOf="@id/imageButton1"
                app:layout_constraintTop_toTopOf="@id/imageButton1"
                app:srcCompat="@drawable/bts" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="134dp"
                android:layout_height="190dp"
                android:layout_marginStart="15dp"

                app:layout_constraintStart_toEndOf="@id/imageButton2"
                app:layout_constraintTop_toTopOf="@id/imageButton2"
                app:srcCompat="@drawable/troy" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="134dp"
                android:layout_height="190dp"
                android:layout_marginStart="15dp"


                app:layout_constraintStart_toEndOf="@id/imageButton3"
                app:layout_constraintTop_toTopOf="@id/imageButton3"
                app:srcCompat="@drawable/conan" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/categoryTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Trending Artists 2021"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>